{
    "builders": [{
        "type": "docker",
        "image": "debian:jessie-slim",
        "commit": true,
        "changes": [
            "VOLUME /data",
            "WORKDIR /data",
            "EXPOSE 6379",
            "ENTRYPOINT [\"docker-entrypoint.sh\"]",
            "CMD [\"redis-server\"]"
        ]
    }],

    "provisioners": [
    {
        "type": "ansible",
        "user": "root",
        "playbook_file": "provision.yml",
        "extra_arguments": [
            "-vv"
            ]
    }
    ],

    "post-processors": [
        [
            {
                "type": "docker-tag",
                "repository": "redis-packer",
                "tag": "latest"
            }
        ]
    ]
}
